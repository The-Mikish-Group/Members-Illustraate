@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<head>
    <title>@ViewData["Title"]</title>
</head>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card rounded p-4 shadow">
                <div class="card-body rounded-2 text-center">
                    <h1 class="text-danger mb-4">@ViewData["Title"]</h1>
                    <p class="text-danger mb-4">You do not have access to this resource.</p>

                    <a href="/" class="btn btn-sm btn-secondary rounded-2 shadow"><i class="bi bi-house-fill"></i> Home</a>
                </div>
            </div>
        </div>
    </div>
</div>