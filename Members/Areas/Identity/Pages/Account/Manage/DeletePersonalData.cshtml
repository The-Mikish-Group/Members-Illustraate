@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="row">
    <div class="col-md-8 col-lg-6">
        <div class="card mx-0 mb-2 rounded p-2 shadow">
            <h1 class="text-black mb-4">@ViewData["Title"]</h1>

            <div class="alert alert-warning mb-4" role="alert">
                <p>
                    <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                </p>
            </div>

            <form id="delete-user" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                @if (Model.RequirePassword)
                {
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder=" " />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                }
                <div class="d-grid gap-2">
                    <button class="btn btn-sm btn-danger rounded-2 shadow" type="submit">Delete data and close my account</button>
                </div>
            </form>
        </div>
    </div>    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}