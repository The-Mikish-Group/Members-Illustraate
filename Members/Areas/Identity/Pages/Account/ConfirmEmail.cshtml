@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Email Confirmed";
}

<head>
    <title>@ViewData["Title"]</title>
</head>

<div class="d-flex justify-content-center align-items-center container" style="min-height: 80vh;">
    <div class="card rounded p-0 shadow" style="max-width: 400px; width: 90%;">
        <div class="card-body rounded-2">
            <h1 class="mb-4">
                <i class="bi bi-envelope-check-fill"></i> @ViewData["Title"]
            </h1>           
            <div class="mt-3 text-center">
                <div class="fs-3 mb-4 text-black">
                    <b>Please Note:</b> You must receive your <b>Welcome email</b> before you will be able to Log in.
                </div>
                <a href="/" class="btn btn-sm btn-success rounded-2 shadow"><i class="bi bi-house-fill"></i> Home</a>
            </div>
        </div>
    </div>
</div>