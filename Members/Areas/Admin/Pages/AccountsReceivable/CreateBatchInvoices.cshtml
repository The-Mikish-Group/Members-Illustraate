@page
@model Members.Areas.Admin.Pages.AccountsReceivable.CreateBatchInvoicesModel
@{
    ViewData["Title"] = "Create Draft Batch Invoices";
    Layout = "/Views/Shared/_Layout.cshtml"; // Or your preferred admin layout
}

<div class="my-4 p-0">

    <div class="row justify-content-center m-1 p-0">
        <div class="col-md-6 col-lg-4 m-0 p-0">

            <form method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="card rounded shadow">

                    <div class="card-header">

                        <!-- Title -->
                        <div class="mb-3 text-center">
                            <h3 class="text-black mb-0"><i class="bi bi-plus-square"></i> @ViewData["Title"]</h3>
                        </div>

                    </div>

                    <div class="card-body rounded-2 rounded-2">
                        <p class="card-text mb-2">
                            Use this form to generate a batch of draft assessment invoices (e.g., for monthly assessments)
                            for all <strong>billable assets</strong> that have an assigned billing contact.
                            One invoice will be created per asset.
                        </p>

                        @if (Model.ActionableBillableAssetsCount > 0)
                        {
                            <p class="bg-info-subtle mb-2 rounded p-2">
                                Currently, there are <strong>@Model.ActionableBillableAssetsCount</strong> billable asset(s) with assigned contacts that will be processed. The specific 'Assessment Fee' set for each individual asset will be used to determine the amount for each invoice.
                            </p>
                        }
                        else
                        {
                            <p class="alert alert-warning">
                                There are currently no billable assets with assigned billing contacts. No invoices will be generated by this batch.
                                Please <a asp-page="./BillableAssets">assign contacts to assets</a> first.
                            </p>
                        }

                        <p class="card-text">
                            These invoices will be created with a 'Draft' status and can be reviewed and finalized
                            via the 'Review Draft Batches' page before they become active.
                        </p>

                        <hr />

                        @if (TempData["StatusMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @Html.Raw(TempData["StatusMessage"]?.ToString()?.Replace("\n", "<br />"))
                                <button type="button" class="btn-close shadow" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @Html.Raw(TempData["ErrorMessage"]?.ToString()?.Replace("\n", "<br />"))
                                <button type="button" class="btn-close shadow" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="Input.Description" class="form-label ms-2"></label>
                            <input asp-for="Input.Description" class="form-control shadow" />
                            <span asp-validation-for="Input.Description" class="text-danger"></span>
                        </div>

                        <div class="row">

                            <!-- Invoice Date -->
                            <div class="col-6">
                                <label asp-for="Input.InvoiceDate" class="form-label ms-2"></label>
                                <input asp-for="Input.InvoiceDate" class="form-control shadow" type="date" />
                                <span asp-validation-for="Input.InvoiceDate" class="text-danger"></span>
                            </div>

                            <!-- Due Date -->
                            <div class="col-6">
                                <label asp-for="Input.DueDate" class="form-label ms-2"></label>
                                <input asp-for="Input.DueDate" class="form-control shadow" type="date" />
                                <span asp-validation-for="Input.DueDate" class="text-danger"></span>
                            </div>

                        </div>

                    </div>

                    <!-- Card-Footer -->
                    <div class="card-footer">

                        <div class="row">

                            <!-- Back to Manage Batch Invoices Button -->
                            <div class="col-6 my-3 text-center">
                                <a class="btn btn-sm btn-back rounded-2 shadow" href=".\reviewbatchinvoices"><i class="bi bi-arrow-left"></i> Back to Review batch Invoices</a>
                            </div>

                            <!-- Create a Batch Invoice Btton -->
                            <div class="col-6 my-3 text-center">
                                <button type="submit" class="btn btn-sm btn-success rounded-2 shadow">
                                    <i class="bi bi-files"></i> Create a Draft Invoice Batch
                                </button>
                            </div>
                        </div>

                    </div>

                </div>

            </form>

        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
